<div>
    <h1>Productos en tiempo real</h1>
    <br>
        {{#each arrayProducts}}
        <div>
            <h2>{{this.title}}</h2>
            <h3>{{this.description}}</h3>
            <h4>{{this.price}}</h4>
        </div>
        {{/each}}
    <br>
</div>

<div>
    <h1>Agregar productos</h1>
    <br>
    <form action="/realtimeproducts" method="post">
        <label>Nombre</label>
        <input name="title">

        <label>Descripcion</label>
        <input name="description">

        <label>Precio</label>
        <input name="price" type="number">

        <label>Stock</label>
        <input name="stock" type="number">

        <label>Categoria</label>
        <input name="category">

        <input type="submit">
    </form>
</div>

<div>
    <h1>Eliminar Productos</h1>
    <br>
    <form action="/realtimeproducts/:pid" method="get">
        <label>ID del producto a eliminar</label>
        <input name="_method" value="DELETE" type="number">

        <input type="submit">
    </form>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/home.js"></script>
